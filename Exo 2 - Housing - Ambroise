import pandas as pd
data = pd.read_csv("Housing.csv")

data.info()
data.head()

#data["ocean_proximity"] ne mache pas donc on veut le transformer en valeurs
data["ocean_proximity"].value_counts()

data.describe()

data.hist()
# on voit bien que c pas fou donc on refait entiÃ¨rement

data.hist(figsize=(15,8), bins=30, edgecolor="black")

import seaborn as sb
sb.scatterplot(x="latitude",y="longitude", data=data, hue="median_house_value", palette="coolwarm" )
#pour visualiser en carte le rendu en pixel de la californie

s=data["population"]/100
data[data["median_income"] > 14]
# people earning more than 140k.

data_na=data.dropna()
data_na.info()

pd.get_dummies(data_na["ocean_proximity"], dtype=int)

dummies = pd.get_dummies(data_na["ocean_proximity"], dtype=int)

data_na.join(dummies)

data_na = data_na.join(dummies)

data_na = data_na.drop(["ocean_proximity"], axis=1)

data_na.corr()

sb.heatmap(data_na.corr())

sb.heatmap(data_na.corr(), annot=True)

sb.set(rc={"figure.figsize": (15, 8)})
sb.heatmap(data_na.corr(), annot=True, cmap="YlGnBu")
